{
  "name": "ND e-resources Google Search Box",
  "description": "Inserts a call-to-action box on Google search results pages that highlights the NDSL resources web page",
  "content_scripts": [
    {
      "matches": ["*://www.google.com/search?*"], 
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "page_action": {
    "default_icon": {
      "16": "images/odin-logo-16.png",
      "32": "images/odin-logo-32.png",
      "48": "images/odin-logo-48.png",
      "128": "images/odin-logo-128.png"
    }
  },
  "icons": {
    "16": "images/odin-logo-16.png",
    "32": "images/odin-logo-32.png",
    "48": "images/odin-logo-48.png",
    "128": "images/odin-logo-128.png"
  },
  "web_accessible_resources": [
    "images/odin-logo.svg",
    "ndesource.html"
  ],
  "version": "1.0",
  "manifest_version": 2
}
